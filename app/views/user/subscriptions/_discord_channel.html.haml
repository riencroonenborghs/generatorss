%li.list-group-item
  .d-flex.flex-row.justify-content-between
    .d-flex.flex-row
      -# - if website.image_url
      -#   = image_tag website.image_url, class: "rounded", style: "width: 75px;"
      -#.d-flex.flex-column(class="#{'ps-4' if website.image_url}")
      = fa_brands "discord", options: { class: "discord" }, size: 3
      .d-flex.flex-column.ps-4
        = fa_brands "discord", options: { class: "discord" }, size: 1
        %h3
          = link_to discord_channel.name, discord_channel.url, target: "_blank"
    .d-flex.flex-column.my-twitter-feeds--manage.align-items-end
      = button_to user_subscription_path(subscription), method: :delete, class: "text-danger btn" do
        = fa_solid "trash", size: 1
        Remove
      = link_to rss_feed_path(subscription.uuid, format: :rss), target: "_blank", class: "rss" do
        = fa_solid "rss", size: 1
        RSS Feed